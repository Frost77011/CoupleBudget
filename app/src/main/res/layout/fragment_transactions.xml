<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linear_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingBottom="15dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_extrabold"
        android:layout_marginBottom="20dp"
        android:text="@string/title_transactions"
        android:textAlignment="center"
        android:textColor="@color/Dark_Pistachio"
        android:textSize="55sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_trans_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner_white"
        android:fontFamily="@font/fira_sans_extrabold"
        android:text="@string/add_transaction"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Blue"
        android:textSize="28sp"
        tools:text="Add Transaction" />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white"
        android:queryHint="@string/search_transactions"
        android:iconifiedByDefault="false"
        android:layout_marginVertical="20dp"
        >
    </SearchView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blue"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:stretchColumns="1">

        <TextView
            android:text="November 12, 2022"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:padding="3dip" />

        <TableRow
            android:layout_marginBottom="10dip"
            android:background="@drawable/rounded_corner_white"
            android:paddingHorizontal="15dip"
            android:layout_width="match_parent">

            <GridLayout
                android:columnCount="3"
                android:rowCount="2"
                android:layout_width="match_parent">

                <TextView
                    android:text="Transaction Name"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

                <Space
                    >
                </Space>

                <TextView
                    android:text="-$5.00"
                    android:textColor="@color/Red"
                    android:padding="3dip"/>

                <TextView
                    android:text="Transaction Category"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

                <Space
                    android:layout_height="wrap_content">
                </Space>

                <TextView
                    android:text="$200.00"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

            </GridLayout>

        </TableRow>

        <TableRow
            android:layout_marginBottom="10dip"
            android:background="@drawable/rounded_corner_white"
            android:paddingHorizontal="15dip"
            android:layout_width="match_parent">

            <GridLayout
                android:columnCount="3"
                android:rowCount="2"
                android:layout_width="match_parent">

                <TextView
                    android:text="Transaction Name"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

                <Space
                    >
                </Space>

                <TextView
                    android:text="-$5.00"
                    android:textColor="@color/Red"
                    android:padding="3dip"/>

                <TextView
                    android:text="Transaction Category"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

                <Space
                    android:layout_height="wrap_content">
                </Space>

                <TextView
                    android:text="$200.00"
                    android:textColor="@color/black"
                    android:padding="3dip"/>

            </GridLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>